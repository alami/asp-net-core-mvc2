@model IEnumerable<Asp_Models.Product>
@using Asp_Utility;

<div class="container p-3">
    <div class="row pt-4">
        <div class=col-6>
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class=col-6>
            <a asp-action="Upsert" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <br /><br />
    @if(Model.Count()>0)
    {
        <table class="table tabel-border tabel-striped" style="width=100%">
             <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>Image</th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.Name</td>
                    <td width="10%">@obj.Price</td>
                    <td width="30%">
                <img src="@WC.ImagePath@obj.Image" width="50%" style="border: 1px solid #bbb" />                    
                    </td>
                    <td width="10%">@obj.Category.Name</td>
                    <td width="10%">@obj.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pen-to-square"></i> Edit  
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-trash-can"></i> Delete 
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p> No Product exists.</p>
    }
</div>

